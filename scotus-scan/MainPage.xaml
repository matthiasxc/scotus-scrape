                                    <TextBlock Text="MAJORITY" FontWeight="Bold" Margin="4"/>
                                    <TextBlock Grid.Row="1" 
                                           Text="{Binding VoteDetails.MajorityString}" Margin="4,4,4,8" />
                                </StackPanel>
                                <StackPanel Grid.Row="2">
                                    <TextBlock Text="MINORTY" FontWeight="Bold" Margin="4" />
                                    <TextBlock Text="{Binding VoteDetails.MinorityString}" Margin="4,4,4,8" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>-->
        </Grid>
    </Grid>
</Page>
